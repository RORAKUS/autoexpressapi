{
  "name": "autoexpressapi",
  "version": "2.0.0",
  "description": "Simple and easy-to-use javascript/typescript library to directory map express routes",
  "main": "out/index.js",
  "types": "out/globals.d.ts",
  "scripts": {
    "format": "prettier --config config/.prettierrc --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c config/tslint.json",
    "test": "jest --config config/jestconfig.json --passWithNoTests",
    "build": "npm install && npm run format && npm run lint && npm test && tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com//RORAKUS/autoexpressapi.git"
  },
  "keywords": [
    "express",
    "api",
    "routing"
  ],
  "author": "RORAKUS <rorakcodes@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RORAKUS/autoexpressapi/issues"
  },
  "homepage": "https://github.com/RORAKUS/autoexpressapi#readme",
  "files": [
    "out/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "express": "^4.18.2"
  },
  "pre-commit": ["build"]
}
